<div class="container">
	<div class="row">

		<h2>プロフィール編集</h2>

		<%= form_for(@user) do |f| %>

		<!-- エラーメッセージ表示-->
		<% if @user.errors.any? %>
		<div id="error_explanation">
			<h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3><
			<ul>
				<% @user.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		</div>
		<% end %>
		<!-- エラーメッセージ表示-->

		<div class="field row">
			<%= f.label :name %><br>
			<%= f.text_field :name, class: "col-xs-3 name" %>
		</div>

		<div class="field row">
			<%= f.label :introduction %><br>
			<%= f.text_area :introduction, rows:'5', class: "col-xs-3 introduction" %>
		</div>

		<div class="field">
			<%= f.label :image %>
			<%= f.attachment_field :profile_image, class: "user_image" %><br>
		</div>

		<div class="actions row">
			<%= f.submit class: "btn btn-primary col-xs-2" %>
		</div>

		<% end %>
	</div>
</div>




